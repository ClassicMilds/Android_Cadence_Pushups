<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.wsu.bdas.androidalpha" >
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".SplashScreen"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomeScreen"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen"
            android:label="@string/title_activity_home_screen" >
        </activity>
        <activity
            android:name=".CadencePushups"
            android:label="@string/title_activity_cadence_pushups"
            android:parentActivityName=".HomeScreen" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.wsu.bdas.androidalpha.HomeScreen" />
        </activity>
        <activity
            android:name=".SitUPS"
            android:label="@string/title_activity_sit_ups"
            android:parentActivityName=".HomeScreen" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.wsu.bdas.androidalpha.HomeScreen" />
        </activity>
        <activity
            android:name=".RunnerLog"
            android:label="@string/title_activity_runner_log"
            android:parentActivityName=".HomeScreen" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="edu.wsu.bdas.androidalpha.HomeScreen" />
        </activity>
    </application>

</manifest>
